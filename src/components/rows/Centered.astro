---
import Row from "./Row.astro";

const { class: cls, full, ...props } = Astro.props;

const vars = {
    cols: full ? "1 / -1" : "3 / 7"
}
---

<style define:vars={vars}>
    .centered {
        display: flex;

        flex-direction: row;
        justify-content: center;
        align-items: center;

        text-align: center;

        gap: var(--spacingLg);
    }

    .centered-container {
        grid-column: var(--cols);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    @media only screen and (max-width: 600px) {
        .centered-container {
            grid-column: 1 / -1;
        }

        .centered {
            grid-column: 1 / -1;

            flex-wrap: wrap;

            text-align: left;
        }
    }
</style>

<Row>
    <section class="centered-container">
        <slot name="pre" />

        <section class:list={["centered", cls]} {...props}>
            <slot />
        </section>

        <slot name="post" />
    </section>
</Row>
