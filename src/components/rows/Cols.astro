---
import Row from '../rows/Row.astro';
---

<style>
    .col {
        display: flex;
        flex-direction: column;

        align-items: stretch;

        padding-left: var(--spacingMd);
        padding-right: var(--spacingMd);
    }

    .col1 {
        grid-column: 1 / 5;
    }

    .col2 {
        grid-column: 5 / -1;
    }
</style>

<Row>
  <section class="col col1">
    <slot name="col1" />
  </section>

  <section class="col col2">
    <slot name="col2" />
  </section>
</Row>
