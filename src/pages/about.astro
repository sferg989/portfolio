---
/* eslint-disable max-lines */
import { Picture } from 'astro:assets';
import Row from '../components/rows/Row.astro';
import AboutLayout from '../layouts/AboutLayout.astro';
import AboutLine from '../components/AboutLine.astro';
import { SchemaBuilder } from '../services/schema_builder';
import type { WorkExperience } from '../types/seo';

// Import the image as an asset for optimization
import heroImage from '../assets/images/MeandBoysGolfing.jpeg';

// Define work history for the schema
const workHistory: WorkExperience[] = [
  {
    '@type': 'Organization',
    name: 'Delta Defense',
    jobTitle: 'Tech Lead',
    startDate: '2021-08',
    endDate: '2025-05',
    location: 'West Bend, WI',
    description: 'Leading software engineering teams, architecting scalable web applications, implementing DevOps practices, and mentoring developers in modern web technologies.'
  },
  {
    '@type': 'Organization',
    name: 'Delta Defense',
    jobTitle: 'Software Engineer',
    startDate: '2018-04',
    endDate: '2021-08',
    location: 'West Bend, WI',
    description: 'Developed full-stack web applications using Next.js, React, PHP, Laravel, and WordPress. Implemented CI/CD pipelines and DevOps best practices.'
  },
  {
    '@type': 'Organization',
    name: 'Marinette Marine',
    jobTitle: 'Program Cost Analyst II',
    startDate: '2016-11',
    endDate: '2018-04',
    location: 'Marinette, WI',
    description: 'Financial analysis and program management in aerospace and defense industry.'
  }
];

// Use the schema builder service instead of manually creating schemas
const aboutSchema = SchemaBuilder.createAboutPersonSchema(workHistory);

---

<style>
    .hero-section {
        width: 100vw;
        margin-left: calc(-50vw + 50%);
        margin-bottom: var(--spacingXl);
        position: relative;
        overflow: hidden;
    }

    .hero-image {
        width: 100%;
        height: 50vh;
        min-height: 400px;
        max-height: 600px;
        object-fit: cover;
        object-position: center;
        display: block;
        transform-origin: top center;
        animation: heroFadeIn 1s ease-in-out;
    }

    .content-section {
        width: 100%;
        margin-top: var(--spacingLg);
        margin-bottom: var(--spacingXl);
    }

    .content-wrapper {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 var(--spacingMd);
    }

    .about-experience-container {
        width: 100%;

        display: flex;
        flex-direction: column;
        align-items: start;
    }

    .about-line {
        margin-bottom: var(--spacingMd);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-weight: var(--fontWeightLg);
        color: var(--colorText);
    }

    h4 {
        padding-left: 1em;
    }

    h5 {
        all: unset;

        font-family: var(--fontMono);
        font-size: var(--fontSizeSm);
    }

    h2 {
        margin-block-start: var(--spacingLg);
    }

    p,
    ul,
    li {
        color: var(--colorTextSecondary);
    }

    p {
        font-weight: var(--fontWeightSm);
    }

    ul {
        list-style: none;
        margin-left: 0;
        padding-left: 0;
    }

    li {
        padding-left: 1em;
        text-indent: -1em;

        font-weight: var(--fontWeightSm);
    }

    li:before {
        content: "_ ";
        padding-right: var(--spacingSm);
    }

    strong {
        font-weight: var(--fontWeightMd);
    }

    @keyframes heroFadeIn {
        0% {
            opacity: 0;
            transform: scale(1.05);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    @media only screen and (max-width: 768px) {
        .hero-image {
            height: 40vh;
            min-height: 300px;
        }

        .content-wrapper {
            padding: 0 var(--spacingSm);
        }
    }

    @media only screen and (max-width: 480px) {
        .hero-image {
            height: 35vh;
            min-height: 250px;
        }
    }
</style>

<AboutLayout
  title="About Steve Ferguson - Tech Lead & Full Stack Developer"
  description="Steve Ferguson is a Tech Lead and Full-Stack Developer with expertise in Next.js, React, TypeScript, PHP, Laravel, WordPress, DevOps, CI/CD, and team leadership."
  keywords="steve ferguson about, tech lead, full stack developer, next.js, react, typescript, php, laravel, wordpress, devops, ci/cd, team leadership"
  image="/assets/MeandBoysGolfing.jpeg"
  type="profile"
  schema={aboutSchema}
>
