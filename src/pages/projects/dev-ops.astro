---
import { getEntry } from 'astro:content';
import ProjectHero from '../../components/ProjectHero.astro';
import ProjectLayout from '../../layouts/ProjectLayout.astro';
import ColsLeft from '../../components/rows/ColsLeft.astro';
import CustomImage from '../../components/CustomImage.astro';
import ColsRight from '../../components/rows/ColsRight.astro';
import AboutLine from '../../components/AboutLine.astro';
import { SchemaBuilder } from '../../services/schema_builder';

const project = await getEntry('projects', 'dev-ops');

// Create SEO schema for DevOps project
const devopsSchema = SchemaBuilder.createProjectSchema({
  name: 'DevOps & Infrastructure Projects by Steve Ferguson',
  description: 'DevOps engineering including CI/CD pipelines, Docker containerization, cloud infrastructure, and automated deployment strategies.',
  programmingLanguage: ['YAML', 'Bash', 'Python', 'JavaScript'],
  tools: [
    'Docker',
    'GitHub Actions',
    'Cloudflare',
    'AWS',
    'Jenkins',
    'Kubernetes',
    'Terraform'
  ],
  keywords: [
    'DevOps Engineering',
    'CI/CD Pipelines',
    'Docker Containerization',
    'Cloud Infrastructure',
    'Automated Deployment',
    'Infrastructure as Code',
    'Container Orchestration'
  ],
  dateCreated: '2021'
});
---

<ProjectLayout
  title="DevOps & Infrastructure Projects by Steve Ferguson - CI/CD & Cloud Engineering"
  description="Steve Ferguson's DevOps expertise: CI/CD pipelines, Docker containerization, cloud infrastructure management, and automated deployment strategies for scalable applications."
  keywords="steve ferguson devops, devops engineer, ci/cd pipelines, docker containers, cloud infrastructure, automated deployment, infrastructure as code"
  image="/assets/projects/DevOps.png"
  type="article"
  schema={devopsSchema}
>
  <ProjectHero
    title={project.data.title}
    year={project.data.year}
    subtitle={project.data.subtitle}
    category={project.data.category}
    cover={project.data.cover}
  />

  <ColsLeft title="ci/cd pipelines">
    <div slot="col1">
      <AboutLine title="CI/CD" description="Ran all tests and code coverage with comprehensive validation.  Autodeply Client projects or PHP applications to various hosting services like Pantheon, Cloudflare, AWS..  " />
      <AboutLine title="Store Local Development" description="One-command setup: For a Ecommerce Wordpress Project.  The ability to backup, delete, import, all data from Pantheon, 3rd Party hosting service." />
      <AboutLine title="Schedule Pipelines" description="Easily Automate tasks with node, or PHP.  " />
      <AboutLine title="All Local Dev Setup" description="Complete WordPress environment automation.  Use Docker to create a local environment, and Cloudflare R2 to backup and restore data." />
    </div>

    <CustomImage
      slot="col2"
      src={import('../../assets/devops.jpg')}
      alt="DevOps automation and CI/CD pipelines"
      width={1920}
      height={1200}
    />
  </ColsLeft>

  <ColsRight title="containerization & database">
    <div slot="col2">
      <AboutLine title="Docker" description="Created  MERN Apps and WordPress instances setups" />
      <AboutLine title="MySQL, Postgre, Oracle, MongoDB" description="Over 10 years experience with these databases.  I have worked with 3rd Party hosting services like Atlas, Digital Ocean.   and self hosted services." />
    </div>

    <div slot="col1" class="devops-showcase">
      <div class="showcase-header">
        <h4>DevOps Impact</h4>
        <p>Infrastructure automation and optimization</p>
      </div>

      <div class="features-list">
        <div class="feature-item">
          <div class="feature-icon">üê≥</div>
          <div class="feature-text">
            <strong>Docker Containers</strong>
            <span>MERN & WordPress instances</span>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">üóÑÔ∏è</div>
          <div class="feature-text">
            <strong>MySQL Optimization</strong>
            <span>Views, procedures, indexing, and optimization</span>
          </div>
        </div>
        <div class="feature-item">
          <div class="feature-icon">‚ö°</div>
          <div class="feature-text">
            <strong>One-Command Setup</strong>
            <span>Complete automation workflow</span>
          </div>
        </div>
      </div>
    </div>
  </ColsRight>
</ProjectLayout>

<style>
  .devops-showcase {
    padding: var(--spacingXL); height: 100%; display: flex; flex-direction: column; justify-content: center;
  }
  .showcase-header { margin-bottom: var(--spacingXL); text-align: center; }
  .showcase-header h4 {
    font-size: var(--fontSizeLg); margin-bottom: var(--spacingSm); color: var(--colorTextPrimary);
  }
  .showcase-header p {
    color: var(--colorTextSecondary); font-size: var(--fontSizeSm);
  }
  .features-list { display: flex; flex-direction: column; gap: var(--spacingLg); }
  .feature-item {
    display: flex; align-items: flex-start; gap: var(--spacingMd); padding: var(--spacingMd);
    background: rgba(255,255,255,0.02); border-radius: var(--borderRadius); transition: background 0.2s ease;
  }
  .feature-item:hover { background: rgba(255,255,255,0.05); }
  .feature-icon { font-size: var(--fontSizeLg); min-width: 2rem; }
  .feature-text { display: flex; flex-direction: column; gap: var(--spacingXs); }
  .feature-text strong { color: var(--colorTextPrimary); font-size: var(--fontSizeMd); }
  .feature-text span { color: var(--colorTextSecondary); font-size: var(--fontSizeSm); }
</style>
