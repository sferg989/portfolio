---
import '../style/project.css';
import MainLayout from './MainLayout.astro';
import type { PersonSchema, CreativeWorkSchema } from '../types/seo';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  canonicalUrl?: string;
  type?: 'website' | 'article' | 'profile';
  schema?: PersonSchema | CreativeWorkSchema | Record<string, unknown>;
}

const { title, description, keywords, image, canonicalUrl, type, schema } = Astro.props;
---

<style>
    a {
        color: red;
    }
</style>

<MainLayout
  title={title}
  description={description}
  keywords={keywords}
  image={image}
  canonicalUrl={canonicalUrl}
  type={type}
  schema={schema}
>
  <slot />
</MainLayout>
